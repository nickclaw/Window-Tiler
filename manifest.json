{
  "manifest_version": 2,
  "minimum_chrome_version": "31.0",
  "offline_enabled": true,

  "name": "Window Tiler",
  "author": "Nicholas Clawson",
  "description": "A chrome extension to quickly organize your windows.",
  "version": "2.0.0",

  "permissions": ["tabs", "system.display"],
  "browser_action": {
    "default_icon": "src/image/icon533.png",
    "default_popup": "src/layout/popup.html"
  },

  "background": {
    "scripts": ["src/script/background.js"],
    "persistent": false
  },

  "icons": {
  	"16": "src/image/icon16.png",
  	"48": "src/image/icon48.png",
  	"128": "src/image/icon128.png"
  }
}
